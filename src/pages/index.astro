---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';


let i = 'u.u'

let q = ['pulp+fiction', 'Shrek+2', '12+Angry+Men', 'The+Lord+of+the+Rings+:+The+Return+of+the+King'];

const response = await fetch(`http://www.omdbapi.com/?apikey=${import.meta.env.OMDB_API_KEY}&t=${q[2]}&type=movie`);
const movieData = await response.json();

console.log(movieData);


---

<Layout title="Moviez">
  <main>
    <header>
      <div class="screen-bg">
        <h1>
          <span class="span-moviez"><img src="/moviez.svg" class="m-typo" /><span>oviez</span></span>
        </h1>
        <p class="subtitle">Everything you need to know about your favourite films</p>
      </div>
    </header>

    <ul role="list" class="link-card-grid">
      <Card
        href= {`https://www.imdb.com/title/${movieData.imdbID}/`}
        title = {`${movieData.Title}`}
        poster = {`${movieData.Poster}`}
        plot = {`${movieData.Plot}`}
        year = {`${movieData.Year}`}
      />
    </ul>
  </main>
</Layout>

<style>
  header {
    background-color: black;
    background-image: url('https://media.giphy.com/media/3o7buijTqhjxjbEqjK/giphy.gif');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .screen-bg {
    background-color: rgba(0, 0, 0, 0.681);
    width: 100%;
    height: 100%;
    padding: 30px 0;
  }

  .subtitle {
    color: rgb(214,214,214);
    margin: 0 40px;
    text-align: center;
    position: relative;
    bottom: 16px;
    font-size: 16px;
  }

  h1 {
    color: rgb(255, 255, 255);
    margin: 30px 40px;
    text-align: center;
    font-size: 80px;
  }

  .welcome-title {
    display: inline-block;
    line-height: 65px;
  }

  .span-moviez {
    display: inline-block;
    -webkit-text-stroke: 1px #ffffff;
    color: rgba(255, 255, 255, 0);
    font-size: 90px;
    bottom: 10px;
    position: relative;
  }

  .m-typo {
    width: 155px;
    position: relative;
    bottom: -27px;
  }

  .link-card-grid {
    display: flex;
    flex-direction: row;
    gap: 15px;
    margin: 20px;
    padding: 0;
  }
</style>
